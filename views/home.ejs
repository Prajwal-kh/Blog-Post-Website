<%-include("partials/header")-%>

    <h1>Home</h1>
    <!-- HomeContent is key of home.ejs file which needed homeStartingContent as a value in res.render("Home") -->
    <p><%=HomeContent%></p>

    <%postContent.forEach((post)=>{%>
      <h2><%=post.title%></h2>
      <!-- <p><%=post.postBody%></p> -->
      <!-- Instead of printing whole content on Home route we are truncating ir to 100 words -->
      <p>
        <%=post.postBody.substring(0,200)+"..."%>
        <a href="/posts/<%=post.title%>" >Read more</a>
      </p>
    <%})%>
<%-include("partials/footer")-%>
